<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="UI_Options"
        android:title="User Interface Options">

        <ListPreference
            android:dialogTitle="Number of display digit"
            android:entries="@array/entries_precision_preference"
            android:entryValues="@array/entriesvalue_precision_preference"
            android:key="precision"
            android:summary="Number of display digit"
            android:title="Precision"></ListPreference>

        <ListPreference
            android:entries="@array/entries_listviewclick_preference"
            android:entryValues="@array/entriesvalue_listviewclick_preference"
            android:key="listviewclick"
            android:summary="How to show currency editbox"
            android:title="Edit option"></ListPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="Service_Options"
        android:title="Service Options">

        <CheckBoxPreference
            android:key="service_option"
            android:summaryOff="Background update disabled"
            android:summaryOn="Background update enabled"
            android:title="Background Update"></CheckBoxPreference>

        <CheckBoxPreference
            android:key="roaming_option"
            android:summaryOff="Disable background update during roaming"
            android:summaryOn="Enable background during roaming"
            android:title="Roaming"></CheckBoxPreference>

    </PreferenceCategory>

</PreferenceScreen>
